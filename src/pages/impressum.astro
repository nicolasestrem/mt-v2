<style>
	.impressum-page {
		background-color: #F8F0E3;
		min-height: 100vh;
		padding: 6rem 0 4rem;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	h1 {
		font-family: 'Poppins', sans-serif;
		font-size: 3rem;
		font-weight: 700;
		color: #003C3D;
		margin-bottom: 3rem;
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	h2 {
		font-family: 'Trebuchet MS', sans-serif;
		font-size: 2rem;
		color: #004C5F;
		margin-top: 3rem;
		margin-bottom: 1.5rem;
		border-bottom: 2px solid #C1693C;
		padding-bottom: 0.5rem;
	}

	h3 {
		font-family: 'Cabin', sans-serif;
		font-size: 1.3rem;
		color: #003C3D;
		margin-top: 2rem;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	p {
		font-family: 'Roboto', sans-serif;
		font-size: 1rem;
		line-height: 1.8;
		color: #302C37;
		margin-bottom: 1rem;
	}

	strong {
		color: #003C3D;
		font-weight: 600;
	}

	a {
		color: #C1693C;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	a:hover {
		color: #004C5F;
		text-decoration: underline;
	}

	section {
		margin-bottom: 2rem;
	}

	.impressum-footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid #C1693C;
		text-align: center;
	}

	.impressum-footer p {
		color: #666;
		font-size: 0.9rem;
	}

	.impressum-note {
		margin-top: 2rem;
		padding: 1.5rem;
		background-color: rgba(193, 105, 60, 0.1);
		border-left: 4px solid #C1693C;
		border-radius: 4px;
		text-align: left;
	}

	.impressum-note strong {
		color: #C1693C;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}

		h2 {
			font-size: 1.5rem;
		}

		h3 {
			font-size: 1.1rem;
		}

		.impressum-page {
			padding: 5rem 0 3rem;
		}
	}
</style>