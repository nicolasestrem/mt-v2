---
/**
 * Renders the footer for the Mobility Trailblazers website.
 * This component includes contact information, social media links, navigation links,
 * and legal information such as copyright, privacy policy, and imprint.
 *
 * @example
 * <Footer />
 */
import Icons from './Icons.astro';
---

<footer class="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-section">
				<div class="footer-logo">
					<img src="/images/logo.webp" alt="Mobility Trailblazers - 25 Mobility Trailblazers in 25, Initiative für Mobilitätswende" width="80" height="80" loading="lazy">
					<h3>Mobility Trailblazers</h3>
				</div>
				<p class="footer-description">
					25 Mobility Trailblazers in 25 – Weil mobiler Wandel Mut braucht.
				</p>
			</div>
			
			<div class="footer-section">
				<h4>Kontakt</h4>
				<div class="footer-contact">
					<p><Icons name="envelope" /> kontakt@mobilitytrailblazers.de</p>
				</div>
			</div>
			
			<div class="footer-section">
				<h4>Folgen Sie uns</h4>
				<div class="footer-social">
					<a href="https://www.linkedin.com/showcase/mobility-trailblazers/" target="_blank" rel="noopener noreferrer" class="social-link">
						<Icons name="linkedin" />
						<span>LinkedIn</span>
					</a>
					<a href="mailto:kontakt@mobilitytrailblazers.de?subject=Kontakt Website" class="social-link">
						<Icons name="envelope" />
						<span>E-Mail</span>
					</a>
				</div>
			</div>
			
			<div class="footer-section">
				<h4>Links</h4>
				<ul class="footer-links">
					<li><a href="#about">Über uns</a></li>
					<li><a href="#jury">Jury</a></li>
					<li><a href="#newsletter">Newsletter</a></li>
					<li><a href="#vorschlagen">Vorschlagen</a></li>
				</ul>
			</div>
		</div>
		
		<div class="footer-bottom">
			<div class="footer-legal">
				<p>&copy; 2025 Mobility Trailblazers. Alle Rechte vorbehalten.</p>
				<div class="footer-legal-links">
					<a href="/datenschutz">Datenschutz</a>
					<a href="/impressum">Impressum</a>
					<a href="#tarteaucitron" onclick="event.preventDefault(); tarteaucitron.userInterface.openPanel();">Cookie-Einstellungen</a>
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: var(--color-primary);
		color: #fff;
		padding: 3rem 0 1rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.footer-section h4 {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--color-accent);
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.footer-logo img {
		width: 60px;
		height: 60px;
		object-fit: contain;
	}

	.footer-logo h3 {
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0;
		color: var(--color-accent);
	}

	.footer-description {
		font-size: 1rem;
		line-height: 1.6;
		opacity: 0.9;
		margin: 0;
	}

	.footer-contact p {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
		font-size: 0.9rem;
		opacity: 0.9;
	}

	.footer-contact p :global(svg) {
		color: var(--color-accent);
		width: 16px;
		height: 16px;
		display: inline-block;
		vertical-align: middle;
		margin-right: 0.25rem;
	}

	.footer-social {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #fff;
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	.social-link:hover {
		color: var(--color-accent);
	}

	.social-link :global(svg) {
		color: var(--color-accent);
		width: 16px;
		height: 16px;
		display: inline-block;
		vertical-align: middle;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-links li {
		margin-bottom: 0.5rem;
	}

	.footer-legal-links {
		display: flex;
		gap: 1rem;
	}

	.footer-legal-links a {
		color: #fff;
		text-decoration: none;
		font-size: 0.8rem;
		opacity: 0.7;
		transition: opacity 0.3s ease;
	}

	.footer-links a {
		color: #fff;
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.3s ease;
		opacity: 0.9;
	}

	.footer-links a:hover {
		color: var(--color-accent);
		opacity: 1;
	}

	.footer-bottom {
		border-top: 1px solid rgb(255, 255, 255, 0.1);
		padding-top: 1rem;
	}

	.footer-legal {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.footer-legal p {
		font-size: 0.8rem;
		opacity: 0.7;
		margin: 0;
	}

	.footer-legal-links a:hover {
		opacity: 1;
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.footer-logo {
			justify-content: center;
		}

		.footer-contact p {
			justify-content: center;
		}

		.footer-social {
			align-items: center;
		}

		.footer-legal {
			flex-direction: column;
			text-align: center;
		}
	}
</style>