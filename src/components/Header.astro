---
// Header component for Mobility Trailblazers
---

<header class="header">
	<div class="container">
		<nav class="nav">
			<div class="nav-brand">
				<a href="/" class="logo">
					<img src="/images/logo.webp" alt="Mobility Trailblazers Logo" width="65" height="65">
				</a>
			</div>
			
			<div class="nav-menu">
				<ul class="nav-list">
					<li><a href="/#about">About</a></li>
					<li><a href="/#jury">Jury</a></li>
					<li><a href="/#newsletter">Newsletter</a></li>
					<li><a href="/shop" class="shop-link">Shop</a></li>
					<li><a href="/#vorschlagen">Vorschlagen</a></li>
				</ul>
			</div>
			
			<div class="nav-social">
				<a href="mailto:kontakt@mobilitytrailblazers.de?subject=Kontakt Website" class="social-link">
					<i class="fas fa-envelope"></i>
					<span>Kontakt</span>
				</a>
				<a href="https://www.linkedin.com/showcase/mobility-trailblazers/" target="_blank" rel="noopener noreferrer" class="social-link">
					<i class="fab fa-linkedin"></i>
					<span>LinkedIn</span>
				</a>
			</div>
			
			<button class="nav-toggle" aria-label="Toggle navigation">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</nav>
	</div>
</header>

<style>
	.header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: rgba(248, 240, 227, 0.95);
		backdrop-filter: blur(10px);
		z-index: 1000;
		padding: 0.75rem 0;
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
	}

	.container {
		position: relative;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}

	.nav-brand {
		flex-shrink: 0;
	}

	.logo img {
		width: 65px;
		height: 65px;
		object-fit: contain;
	}

	.nav-menu {
		flex: 1;
		display: flex;
		justify-content: center;
	}

	.nav-list {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 3rem;
	}

	.nav-list a {
		color: #c1693c;
		font-weight: 600;
		font-size: 1.1rem;
		text-decoration: none;
		transition: color 0.3s ease;
		position: relative;
	}

	.nav-list a:hover {
		color: #004C5F;
	}

	.nav-list a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #c1693c;
		transition: width 0.3s ease;
	}

	.nav-list a:hover::after {
		width: 100%;
	}

	/* Special styling for Shop link */
	.shop-link {
		background: linear-gradient(135deg, #c1693c, #d17f52);
		color: white !important;
		padding: 0.4rem 1rem;
		border-radius: 6px;
		transition: all 0.3s ease;
		position: relative;
	}

	.shop-link:hover {
		background: linear-gradient(135deg, #d17f52, #c1693c);
		color: white !important;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(193, 105, 60, 0.3);
	}

	.shop-link::after {
		display: none; /* Remove underline effect for shop button */
	}

	.nav-social {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: #c1693c;
		font-size: 1.25rem;
		font-weight: 600;
		transition: all 0.3s ease;
		padding: 0.25rem 0.5rem;
		border-radius: 8px;
	}

	.social-link:hover {
		color: #004C5F;
		transform: translateY(-2px);
		background: rgba(193, 105, 60, 0.05);
	}

	.social-link i {
		font-size: 1.8rem;
	}

	.social-link span {
		font-size: 1.15rem;
		font-weight: 600;
	}

	.nav-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.75rem;
		min-width: 44px;
		min-height: 44px;
		align-items: center;
		justify-content: center;
		border-radius: 6px;
		transition: all 0.3s ease;
		-webkit-tap-highlight-color: rgba(193, 105, 60, 0.2);
		touch-action: manipulation;
	}
	
	.nav-toggle:hover {
		background: rgba(193, 105, 60, 0.1);
		transform: translateY(-1px);
	}

	.nav-toggle span {
		width: 25px;
		height: 3px;
		background: #c1693c;
		transition: all 0.3s ease;
	}

	@media (max-width: 768px) {
		.nav {
			position: relative;
		}

		.nav-menu {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgba(248, 240, 227, 0.98);
			backdrop-filter: blur(10px);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
			padding: 1rem;
			margin-top: 0.5rem;
			border-radius: 8px;
		}

		.nav-menu.active {
			display: block;
		}

		.nav-list {
			flex-direction: column;
			gap: 0.5rem;
		}

		.nav-list li {
			padding: 0.75rem 1rem;
			border-radius: 4px;
			transition: background 0.3s ease;
		}

		.nav-list li:hover {
			background: rgba(193, 105, 60, 0.1);
		}

		.nav-list a {
			display: block;
			font-size: 1.1rem;
		}

		.nav-social {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgba(248, 240, 227, 0.98);
			backdrop-filter: blur(10px);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
			padding: 1rem;
			margin-top: 0.5rem;
			border-radius: 8px;
			justify-content: center;
			gap: 2rem;
		}

		.nav-social.active {
			display: flex;
			margin-top: 280px; /* Space for nav menu */
		}

		.nav-toggle {
			display: flex;
			z-index: 1002;
		}

		.nav-toggle.active span:nth-child(1) {
			transform: rotate(45deg) translate(5px, 5px);
		}

		.nav-toggle.active span:nth-child(2) {
			opacity: 0;
		}

		.nav-toggle.active span:nth-child(3) {
			transform: rotate(-45deg) translate(7px, -6px);
		}

		.logo img {
			width: 55px;
			height: 55px;
		}
	}
</style>

<script>
	// Use event delegation and ensure script only runs once
	document.addEventListener('DOMContentLoaded', () => {
		// Find elements within the header context
		const header = document.querySelector('.header');
		if (!header) return;
		
		const navToggle = header.querySelector('.nav-toggle');
		const navMenu = header.querySelector('.nav-menu');
		const navSocial = header.querySelector('.nav-social');
		
		// Only add listeners if they haven't been added already
		if (navToggle && !navToggle.hasAttribute('data-listener-added')) {
			navToggle.setAttribute('data-listener-added', 'true');
			
			// Handle both click and touch events for mobile compatibility
			const toggleMenu = (e) => {
				e.preventDefault();
				e.stopPropagation();
				navMenu?.classList.toggle('active');
				navSocial?.classList.toggle('active');
				navToggle.classList.toggle('active');
			};
			
			// Add both click and touchstart events
			navToggle.addEventListener('click', toggleMenu);
			navToggle.addEventListener('touchstart', toggleMenu, { passive: false });
			
			// Close mobile menu when clicking on a link
			const navLinks = header.querySelectorAll('.nav-list a');
			navLinks.forEach(link => {
				link.addEventListener('click', (e) => {
					// Close menu for all links on mobile
					if (window.innerWidth <= 768) {
						navMenu?.classList.remove('active');
						navSocial?.classList.remove('active');
						navToggle?.classList.remove('active');
					}
				});
			});
			
			// Close menu when clicking outside
			document.addEventListener('click', (e) => {
				if (!header.contains(e.target)) {
					navMenu?.classList.remove('active');
					navSocial?.classList.remove('active');
					navToggle?.classList.remove('active');
				}
			});
		}
	});
</script>