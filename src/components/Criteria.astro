---
/**
 * Renders the selection criteria section for the Mobility Trailblazers awards.
 * This component displays the key criteria used to evaluate nominations,
 * arranged in a visually appealing layout.
 *
 * @example
 * <Criteria />
 */
const criteria = [
  {
    title: "Mut & Pioniergeist",
    description: "Welche Risiken wurden eingegangen? Welche Konventionen hinterfragt?",
    icon: "üöÄ",
    gradient: "from-orange-400 to-red-500"
  },
  {
    title: "Innovationsgrad",
    description: "Wie neuartig ist der Ansatz?",
    icon: "üí°",
    gradient: "from-yellow-400 to-orange-500"
  },
  {
    title: "Wirkung & Umsetzung",
    description: "Welche konkrete Ver√§nderung wurde erreicht?",
    icon: "üéØ",
    gradient: "from-teal-600 to-cyan-600",
    isHero: true
  },
  {
    title: "Relevanz f√ºr die Mobilit√§tswende",
    description: "Leistet der Beitrag einen strukturellen oder gesellschaftlichen Mehrwert?",
    icon: "üåç",
    gradient: "from-green-500 to-teal-600"
  },
  {
    title: "Vorbildfunktion & Pers√∂nlichkeit",
    description: "Inspiriert die Person durch Haltung und Sichtbarkeit?",
    icon: "‚≠ê",
    gradient: "from-purple-500 to-pink-500"
  }
];
---

<section id="kriterien" class="py-12 md:py-16 relative" style="background-color: #F8F0E3;">
  <!-- Wave divider at top -->
  <div class="section-divider-top">
    <svg viewBox="0 0 1200 60" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <path d="M0,30 C200,60 400,10 600,40 800,10 1000,60 1200,30 L1200,0 L0,0 Z" fill="white"></path>
    </svg>
  </div>
  <div class="container mx-auto px-4 relative z-10">
    <h2 class="text-center mb-4 text-4xl md:text-5xl font-bold" style="color: #004C5F;">
      Unsere Auswahlkriterien
    </h2>
    <p class="text-center text-lg md:text-xl mb-12 md:mb-16 max-w-3xl mx-auto" style="color: #302C37;">
      Wir suchen Macherinnen und Macher, die im Jahr 2025 mit konkreten Projekten 
      oder Initiativen den mobilen Wandel vorangetrieben haben.
    </p>
    
    <!-- Diamond/Pentagon Layout for Desktop -->
    <div class="criteria-diamond-layout">
      {criteria.map((item, index) => (
        <div 
          class={`criteria-card ${item.isHero ? 'criteria-hero' : ''} criteria-item-${index + 1}`}
          style={`animation-delay: ${index * 0.1}s;`}
        >
          <!-- Gradient border effect -->
          <div class="criteria-gradient-border"></div>
          
          <!-- Card content -->
          <div class="criteria-content">
            <!-- Icon container with gradient background -->
            <div class={`criteria-icon-container bg-gradient-to-br ${item.gradient}`}>
              <span class="criteria-icon">{item.icon}</span>
            </div>
            
            <!-- Title -->
            <h3 class="criteria-title">{item.title}</h3>
            
            <!-- Description -->
            <p class="criteria-description">{item.description}</p>
            
            <!-- Optional number badge -->
            <div class="criteria-number">{String(index + 1).padStart(2, '0')}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Section divider */
  .section-divider-top {
    position: absolute;
    top: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: none;
    overflow: hidden;
    line-height: 0;
    z-index: 2;
  }

  .section-divider-top svg {
    position: relative;
    display: block;
    width: 100%;
    height: 40px;
  }

  @media (min-width: 768px) {
    .section-divider-top svg {
      height: 60px;
    }
  }

  /* Diamond/Pentagon Layout */
  .criteria-diamond-layout {
    display: grid;
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }
  
  /* Desktop: 2-1-2 diamond pattern */
  @media (min-width: 1024px) {
    .criteria-diamond-layout {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto auto auto;
      gap: 2rem;
    }
    
    .criteria-item-1 {
      grid-column: 1;
      grid-row: 1;
    }

    .criteria-item-2 {
      grid-column: 2;
      grid-row: 1;
    }

    .criteria-item-3 { 
      grid-column: 1 / -1; 
      grid-row: 2;
      max-width: 420px;
      justify-self: center;
      width: 100%;
    }

    .criteria-item-4 {
      grid-column: 1;
      grid-row: 3;
    }

    .criteria-item-5 {
      grid-column: 2;
      grid-row: 3;
    }
    
    /* Hero card (center) gets special treatment */
    .criteria-hero {
      transform: scale(1.05);
    }
    
    .criteria-hero .criteria-content {
      padding: 2.5rem;
    }
  }
  
  /* Tablet: 2-1-2 with adjusted spacing */
  @media (min-width: 768px) and (max-width: 1023px) {
    .criteria-diamond-layout {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    
    .criteria-item-3 {
      grid-column: 1 / -1;
      max-width: 400px;
      justify-self: center;
      width: 100%;
    }
  }
  
  /* Mobile: Single column */
  @media (max-width: 767px) {
    .criteria-diamond-layout {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      max-width: 400px;
    }
  }
  
  /* Card Styling */
  .criteria-card {
    position: relative;
    background: rgb(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }
  
  @keyframes fade-in-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Gradient border effect */
  .criteria-gradient-border {
    position: absolute;
    inset: 0;
    border-radius: 20px;
    padding: 2px;
    background: linear-gradient(135deg, #C1693C, #004C5F, #C1693C);

    /* Mask effect temporarily disabled due to stylelint compatibility
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude; */
    opacity: 0.2;
    transition: opacity 0.4s ease;
  }
  
  .criteria-card:hover .criteria-gradient-border {
    opacity: 1;
    animation: border-rotate 3s linear infinite;
  }
  
  @keyframes border-rotate {
    0% { background: linear-gradient(135deg, #C1693C, #004C5F, #C1693C); }
    50% { background: linear-gradient(135deg, #004C5F, #C1693C, #004C5F); }
    100% { background: linear-gradient(135deg, #C1693C, #004C5F, #C1693C); }
  }
  
  /* Card content */
  .criteria-content {
    position: relative;
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    z-index: 1;
  }
  
  /* Icon styling */
  .criteria-icon-container {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 15px rgb(0, 0, 0, 0.1);
    transition: all 0.4s ease;
  }
  
  .criteria-icon {
    font-size: 2.5rem;
    filter: drop-shadow(0 2px 4px rgb(0, 0, 0, 0.1));
  }
  
  .criteria-card:hover .criteria-icon-container {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 25px rgb(0, 0, 0, 0.15);
  }
  
  /* Title styling */
  .criteria-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #004C5F;
    margin-bottom: 1rem;
    transition: color 0.3s ease;
  }
  
  .criteria-card:hover .criteria-title {
    color: #C1693C;
  }
  
  /* Description styling */
  .criteria-description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #302C37;
    flex-grow: 1;
  }
  
  /* Number badge */
  .criteria-number {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgb(193, 105, 60, 0.1);
    color: #C1693C;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.875rem;
    transition: all 0.3s ease;
  }
  
  .criteria-card:hover .criteria-number {
    background: #C1693C;
    color: #fff;
    transform: scale(1.1);
  }
  
  /* Hover effects */
  .criteria-card:hover {
    transform: translateY(-8px);
    box-shadow: 
      0 20px 40px rgb(193, 105, 60, 0.2),
      0 15px 30px rgb(0, 60, 61, 0.15);
  }
  
  .criteria-hero:hover {
    transform: translateY(-8px) scale(1.05);
  }
  
  /* Mobile adjustments */
  @media (max-width: 767px) {
    .criteria-content {
      padding: 1.5rem;
    }
    
    .criteria-icon-container {
      width: 70px;
      height: 70px;
      margin-bottom: 1.25rem;
    }
    
    .criteria-icon {
      font-size: 2rem;
    }
    
    .criteria-title {
      font-size: 1.125rem;
    }
    
    .criteria-card:hover {
      transform: none;
    }
    
    .criteria-card:active {
      transform: scale(0.98);
    }
  }
</style>