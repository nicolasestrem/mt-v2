---
// Jury section component for Mobility Trailblazers
import Icons from './Icons.astro';
import { getContent } from '../lib/tina';

interface JuryMember {
  name: string;
  title: string;
  organization: string;
  image: string;
  bio: string;
  linkedin?: string;
}

interface JuryContent {
  title: string;
  subtitle: string;
  members: JuryMember[];
}

// Load all jury members from content/jury/ directory
const juryMember1 = await getContent<JuryMember>('jury', 'jury-member-1');
const juryMember2 = await getContent<JuryMember>('jury', 'jury-member-2');

// Create jury content with fallbacks
const content: JuryContent = {
  title: 'Die Jury',
  subtitle: 'Expertinnen und Experten aus Wirtschaft, Wissenschaft und Politik.',
  members: [
    juryMember1 || {
      name: "Andreas Herrmann",
      title: "Präsident", 
      organization: "Prof. Dr. Andreas Herrmann Gründer und Direktor des Instituts für Mobilität an der Universität St. Gallen",
      image: "/images/jury/andreas-herrmann.webp",
      bio: "Prof. Dr. Andreas Herrmann Gründer und Direktor des Instituts für Mobilität an der Universität St. Gallen",
      linkedin: "https://www.linkedin.com/in/andreas-herrmann-4053541/"
    },
    juryMember2 || {
      name: "Torsten Tomczak",
      title: "Vize-Präsident",
      organization: "Prof. Dr. Dr. h.c. Torsten Tomczak Gründer des Instituts für Mobilität an der Universität St. Gallen", 
      image: "/images/jury/torsten-tomczak.webp",
      bio: "Prof. Dr. Dr. h.c. Torsten Tomczak Gründer des Instituts für Mobilität an der Universität St. Gallen",
      linkedin: "https://www.linkedin.com/in/torstentomczak/"
    }
  ].filter(Boolean)
};
---

<section class="jury" id="jury">
	<!-- Subtle tilt divider at top -->
	<div class="section-divider-top">
		<svg viewBox="0 0 1200 60" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
			<polygon points="0,60 1200,0 1200,0 0,0" fill="#F8F0E3"></polygon>
		</svg>
	</div>
	<div class="container">
		<div class="jury-header">
			<h2 class="jury-title" style="color: #C1693C;">{content.title}</h2>
			<p class="jury-subtitle">{content.subtitle}</p>
		</div>
		
		<div class="jury-members">
			{content.members.map((member) => (
				<div class="jury-member">
					<div class="member-image">
						<img src={member.image} alt={`${member.name}, ${member.title} - ${member.organization}`} width="300" height="300" loading="lazy">
					</div>
					<div class="member-info">
						<h3 class="member-name">{member.name}</h3>
						<h4 class="member-role">{member.title}</h4>
						<p class="member-bio">{member.bio}</p>
						{member.linkedin && (
							<div class="member-social">
								<a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="social-link">
									<Icons name="linkedin" />
								</a>
							</div>
						)}
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.jury {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		color: white;
		position: relative;
		padding: 3rem 0;
	}

	.section-divider-top {
		position: absolute;
		top: -1px;
		left: 50%;
		transform: translateX(-50%);
		width: 100%;
		max-width: none;
		overflow: hidden;
		line-height: 0;
		z-index: 2;
	}

	.section-divider-top svg {
		position: relative;
		display: block;
		width: 100%;
		height: 30px;
	}

	@media (min-width: 768px) {
		.section-divider-top svg {
			height: 50px;
		}
	}

	.jury::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		/* cityscape.svg background removed - file not available */
		opacity: 0.1;
		z-index: 1;
	}

	.jury-header {
		text-align: center;
		margin-bottom: 2.5rem;
		position: relative;
		z-index: 2;
	}

	.jury-title {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--color-accent);
	}

	.jury-subtitle {
		font-size: 1.2rem;
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
	}

	.jury-members {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 3rem;
		position: relative;
		z-index: 2;
	}

	.jury-member {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		padding: 2rem;
		text-align: center;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.jury-member:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
	}

	.member-image {
		margin-bottom: 1.5rem;
	}

	.member-image img {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		object-fit: cover;
		border: 4px solid var(--color-accent);
		transition: transform 0.3s ease;
	}

	.jury-member:hover .member-image img {
		transform: scale(1.05);
	}

	.member-name {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--color-accent);
	}

	.member-role {
		font-size: 1rem;
		font-weight: 500;
		margin-bottom: 1rem;
		opacity: 0.8;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.member-bio {
		font-size: 0.9rem;
		line-height: 1.6;
		margin-bottom: 1.5rem;
		opacity: 0.9;
	}

	.member-social {
		display: flex;
		justify-content: center;
		gap: 1rem;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: var(--color-accent);
		color: white;
		border-radius: 50%;
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-link:hover {
		background: white;
		color: var(--color-accent);
		transform: translateY(-2px);
	}

	.social-link :global(svg) {
		width: 1.2rem;
		height: 1.2rem;
	}

	@media (max-width: 768px) {
		.jury-title {
			font-size: 2rem;
		}

		.jury-subtitle {
			font-size: 1rem;
		}

		.jury-members {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.jury-member {
			padding: 1.5rem;
		}

		.member-image img {
			width: 150px;
			height: 150px;
		}
	}
</style>