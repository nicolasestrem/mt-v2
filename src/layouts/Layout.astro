---
import '../styles/global.css';
import ScrollToTop from '../components/ScrollToTop.astro';

export interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "25 Mobility Trailblazers in 25 – Weil mobiler Wandel Mut braucht.", image = "/images/og-image.jpg" } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<!-- Enhanced Android viewport meta tag -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes, shrink-to-fit=no, viewport-fit=cover" />
		<!-- Android Chrome theme color -->
		<meta name="theme-color" content="#F8F0E3" />
		<!-- Prevent Android's auto-zoom on form focus -->
		<meta name="format-detection" content="telephone=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Resource hints for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="dns-prefetch" href="https://widgets.sociablekit.com">
		<link rel="dns-prefetch" href="https://www.linkedin.com">
		<!-- Only load essential fonts immediately -->
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
		<!-- Load other fonts asynchronously -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap"></noscript>

		<!-- Preload critical images -->
		<link rel="preload" as="image" href="/images/about/fernsehturm-berlin.jpg" fetchpriority="high">

		<title>{title}</title>
		
		<!-- Tarteaucitron Cookie Consent -->
		<script is:inline src="/tarteaucitron/tarteaucitron.js"></script>
		<script is:inline>
			tarteaucitron.init({
				"privacyUrl": "/datenschutz", /* Privacy policy URL */
				"bodyPosition": "bottom", /* Banner position */
				"hashtag": "#tarteaucitron", /* Open panel with hashtag */
				"cookieName": "tarteaucitron", /* Cookie name */
				"orientation": "bottom", /* Banner orientation */
				"groupServices": true, /* Group services by category */
				"showDetailsOnClick": true, /* Show service details on click */
				"serviceDefaultState": "wait", /* Default state: 'wait', 'true' or 'false' */
				"showAlertSmall": true, /* Show small banner at bottom */
				"cookieslist": true, /* Show cookies list */
				"showIcon": true, /* Show cookie icon */
				"iconPosition": "BottomLeft", /* Icon position */
				"adblocker": false, /* Show warning if adblocker detected */
				"DenyAllCta": true, /* Add deny all button */
				"AcceptAllCta": true, /* Add accept all button */
				"highPrivacy": true, /* Disable auto consent */
				"alwaysNeedConsent": false, /* Always ask for consent */
				"handleBrowserDNTRequest": false, /* Handle Do Not Track */
				"removeCredit": false, /* Remove tarteaucitron credit */
				"moreInfoLink": true, /* Show more info link */
				"useExternalCss": false, /* Use external CSS */
				"useExternalJs": false, /* Use external JS */
				"readmoreLink": "/datenschutz", /* Read more link */
				"mandatory": false, /* Show mandatory message */
				"mandatoryCta": true, /* Mandatory accept button */
				"googleConsentMode": true, /* Enable Google Consent Mode v2 */
				"partnersList": false /* Hide partners list */
			});
			
			// Custom service for SociableKit
			tarteaucitron.services.sociablekit = {
				"key": "sociablekit",
				"type": "social",
				"name": "SociableKit LinkedIn Feed",
				"uri": "https://www.sociablekit.com",
				"needConsent": true,
				"cookies": ['sk_*'],
				"js": function () {
					"use strict";
					tarteaucitron.fallback(['sociablekit-placeholder'], function (x) {
						var frame = x.getAttribute("data-frame"),
							width = x.getAttribute("data-width"),
							height = x.getAttribute("data-height");
						
						if (frame) {
							return '<iframe src="' + frame + '" width="' + width + '" height="' + height + '" frameborder="0" loading="lazy" class="linkedin-iframe" title="Mobility Trailblazers LinkedIn Feed"></iframe>';
						}
					});
				},
				"fallback": function () {
					"use strict";
					var id = 'sociablekit-placeholder';
					tarteaucitron.fallback(['sociablekit-placeholder'], function (elem) {
						elem.style.display = 'block';
						return '';
					});
				}
			};
			
			// Google Analytics
			tarteaucitron.user.gtagUa = 'G-492443780';
			(tarteaucitron.job = tarteaucitron.job || []).push('gtag');
			
			// Google Tag Manager
			tarteaucitron.user.googletagmanagerId = 'GTM-WDRKWCN7';
			(tarteaucitron.job = tarteaucitron.job || []).push('googletagmanager');
		</script>
		
		
		<!-- Inline critical CSS for hero text -->
		<style>
			.hero-subtitle {
				font-family: 'Roboto', system-ui, -apple-system, sans-serif;
				font-size: 1.25rem;
				margin-bottom: 2rem;
				line-height: 1.6;
			}
		</style>
		
		<!-- Structured Data for SEO -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@graph": [
				{
					"@type": "Organization",
					"@id": "https://mobilitytrailblazers.de/#organization",
					"name": "Mobility Trailblazers",
					"url": "https://mobilitytrailblazers.de",
					"logo": {
						"@type": "ImageObject",
						"url": "https://mobilitytrailblazers.de/images/logo.webp",
						"width": 300,
						"height": 300
					},
					"description": "25 Mobility Trailblazers in 25 – Weil mobiler Wandel Mut braucht. Initiative zur Auszeichnung von Vorreitern der Mobilitätswende.",
					"sameAs": [
						"https://www.linkedin.com/company/mobility-trailblazers"
					]
				},
				{
					"@type": "Event",
					"@id": "https://mobilitytrailblazers.de/#event",
					"name": "25 Mobility Trailblazers in 25 Awards",
					"description": "Auszeichnung der 25 wichtigsten Vorreiter der Mobilitätswende in Deutschland für das Jahr 2025.",
					"startDate": "2025-10-30",
					"eventStatus": "https://schema.org/EventScheduled",
					"eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
					"location": {
						"@type": "Place",
						"name": "Deutschland",
						"addressCountry": "DE"
					},
					"organizer": {
						"@id": "https://mobilitytrailblazers.de/#organization"
					},
					"offers": {
						"@type": "Offer",
						"price": "0",
						"priceCurrency": "EUR",
						"availability": "https://schema.org/InStock",
						"validFrom": "2025-01-01"
					}
				}
			]
		}
		</script>
	</head>
	<body>
		<slot />
		<ScrollToTop />
		
		<!-- Custom CSS for tarteaucitron positioning (loads after tarteaucitron) -->
		<link rel="stylesheet" href="/tarteaucitron-custom.css">
		<script is:inline>
		(function() {
			var HEADER_OFFSET = 100;
			
			function smoothScrollToElement(targetId) {
				var target = document.getElementById(targetId);
				if (!target) return false;
				
				var targetPosition = target.getBoundingClientRect().top + window.pageYOffset - HEADER_OFFSET;
				
				if ('scrollBehavior' in document.documentElement.style) {
					window.scrollTo({top: targetPosition, behavior: 'smooth'});
				} else {
					window.scrollTo(0, targetPosition);
				}
				return true;
			}
			
			function handleInternalLinks() {
				var links = document.querySelectorAll('a[href^="#"], a[href^="/#"]');
				
				for (var i = 0; i < links.length; i++) {
					links[i].addEventListener('click', function(e) {
						var href = this.getAttribute('href');
						var targetId = href.replace(/^\/?#/, '');
						
						if (targetId && smoothScrollToElement(targetId)) {
							e.preventDefault();
							if (history.pushState) {
								history.pushState(null, null, '#' + targetId);
							} else {
								window.location.hash = targetId;
							}
						}
					});
				}
			}
			
			if (document.readyState === 'loading') {
				document.addEventListener('DOMContentLoaded', handleInternalLinks);
			} else {
				handleInternalLinks();
			}
			
			if (window.location.hash) {
				setTimeout(function() {
					smoothScrollToElement(window.location.hash.substring(1));
				}, 100);
			}
		})();
		</script>
	</body>
</html>

