---
// Hero component with countdown timer
---

<section class="hero gradient-bg-primary text-brand-beige py-20 md:py-32 relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="decoration-dots top-10 right-10"></div>
  <div class="decoration-wave bottom-10 left-10"></div>
  <div class="container mx-auto px-4 text-center">
    <h1 class="mb-6 animate-slide-in text-brand-beige" style="animation-delay: 0.2s;">
      25 Mobility Trailblazers in 25
    </h1>
    
    <p class="text-accent-text italic mb-12 max-w-3xl mx-auto opacity-90 text-brand-beige">
      „Mobiler Wandel braucht Mut. Und mutige Menschen verdienen eine Bühne."
    </p>
    
    <!-- Countdown Timer -->
    <div class="mb-12">
      <p class="text-sm uppercase tracking-widest mb-4 opacity-75">Award-Verleihung in</p>
      <div id="countdown" class="flex justify-center gap-4 text-3xl md:text-5xl font-mono">
        <div class="text-center">
          <span id="days" class="block font-bold">--</span>
          <span class="text-sm uppercase tracking-wide opacity-75">Tage</span>
        </div>
        <div class="text-center">
          <span id="hours" class="block font-bold">--</span>
          <span class="text-sm uppercase tracking-wide opacity-75">Stunden</span>
        </div>
        <div class="text-center">
          <span id="minutes" class="block font-bold">--</span>
          <span class="text-sm uppercase tracking-wide opacity-75">Minuten</span>
        </div>
      </div>
    </div>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="#nominierung" class="btn-primary">
        Jetzt nominieren →
      </a>
      <a href="#kriterien" class="btn-secondary">
        Mehr erfahren
      </a>
    </div>
  </div>
  <!-- Shape Divider Bottom -->
  <div class="shape-divider shape-divider-bottom">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
    </svg>
  </div>
</section>

<script>
  // Vanilla JS countdown timer - no dependencies needed
  const targetDate = new Date('2025-10-30T18:00:00+01:00');
  const daysEl = document.getElementById('days');
  const hoursEl = document.getElementById('hours');
  const minutesEl = document.getElementById('minutes');
  
  function updateCountdown() {
    const now = new Date();
    const diff = targetDate.getTime() - now.getTime();
    
    if (diff > 0) {
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      
      if (daysEl) daysEl.textContent = days.toString().padStart(2, '0');
      if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, '0');
      if (minutesEl) minutesEl.textContent = minutes.toString().padStart(2, '0');
    } else {
      // Event has passed
      const countdown = document.getElementById('countdown');
      if (countdown) {
        countdown.innerHTML = '<span class="text-2xl">Der Award wurde verliehen!</span>';
      }
    }
  }
  
  // Update immediately and then every minute
  updateCountdown();
  setInterval(updateCountdown, 60000);
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>