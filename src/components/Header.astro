---
/**
 * Renders the main header for the website.
 * It includes the site logo, primary navigation, social media links,
 * and a mobile menu toggle. The header is fixed to the top of the viewport.
 *
 * @example
 * <Header />
 */
import Icons from './Icons.astro';
---

<header class="header">
	<div class="container">
		<nav class="nav">
			<div class="nav-brand">
				<a href="/" class="logo">
					<img src="/images/logo.webp" alt="Mobility Trailblazers - 25 Mobility Trailblazers in 25, Logo zur Startseite" width="65" height="65">
				</a>
			</div>
			
<div class="nav-menu" id="nav-menu">
				<ul class="nav-list" role="list">
					<li><a href="/#about">About</a></li>
					<li><a href="/#jury">Jury</a></li>
					<li><a href="/#newsletter">Newsletter</a></li>
					<li><a href="/shop" class="shop-link">Shop</a></li>
					<li><a href="/#vorschlagen">Vorschlagen</a></li>
				</ul>
			</div>
			
			<div class="nav-social">
				<a href="mailto:kontakt@mobilitytrailblazers.de?subject=Kontakt Website" class="social-link">
					<Icons name="envelope" />
					<span>Kontakt</span>
				</a>
				<a href="https://www.linkedin.com/showcase/mobility-trailblazers/" target="_blank" rel="noopener noreferrer" class="social-link">
					<Icons name="linkedin" />
					<span>LinkedIn</span>
				</a>
			</div>
			
			<button class="nav-toggle" 
				aria-label="Toggle navigation menu" 
				aria-expanded="false"
				aria-controls="nav-menu">
				<span aria-hidden="true"></span>
				<span aria-hidden="true"></span>
				<span aria-hidden="true"></span>
			</button>
		</nav>
	</div>
</header>

<style>
	.header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: rgb(248, 240, 227, 0.95);
		backdrop-filter: blur(10px);
		z-index: 1000;
		padding: 0.75rem 0;
		box-shadow: 0 2px 20px rgb(0, 0, 0, 0.1);
	}

	.container {
		position: relative;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}

	.nav-brand {
		flex-shrink: 0;
	}

	.logo img {
		width: 65px;
		height: 65px;
		object-fit: contain;
	}

	.nav-menu {
		flex: 1;
		display: flex;
		justify-content: center;
	}

	.nav-list {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 3rem;
	}

	.nav-list a {
		color: #c1693c;
		font-weight: 600;
		font-size: 1.1rem;
		text-decoration: none;
		transition: color 0.3s ease;
		position: relative;
	}

	.nav-list a:hover {
		color: #004C5F;
	}

	.nav-list a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #c1693c;
		transition: width 0.3s ease;
	}

	.nav-list a:hover::after {
		width: 100%;
	}

	/* Special styling for Shop link */
	.shop-link {
		background: linear-gradient(135deg, #c1693c, #d17f52);
		color: #fff !important;
		padding: 0.4rem 1rem;
		border-radius: 6px;
		transition: all 0.3s ease;
		position: relative;
	}

	.shop-link:hover {
		background: linear-gradient(135deg, #d17f52, #c1693c);
		color: #fff !important;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgb(193, 105, 60, 0.3);
	}

	.shop-link::after {
		display: none; /* Remove underline effect for shop button */
	}

	.nav-social {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: #c1693c;
		font-size: 1.25rem;
		font-weight: 600;
		transition: all 0.3s ease;
		padding: 0.25rem 0.5rem;
		border-radius: 8px;
	}

	.social-link:hover {
		color: #004C5F;
		transform: translateY(-2px);
		background: rgb(193, 105, 60, 0.05);
	}

	.social-link i {
		font-size: 1.8rem;
	}

	.social-link span {
		font-size: 1.15rem;
		font-weight: 600;
	}

	.nav-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
	}

	.nav-toggle span {
		width: 25px;
		height: 3px;
		background: #c1693c;
		transition: all 0.3s ease;
	}

	@media (max-width: 768px) {
		.nav {
			position: relative;
		}

		.nav-menu {
			display: none !important; /* Force hide on mobile initially */
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgb(248, 240, 227, 0.98);
			backdrop-filter: blur(10px);
			box-shadow: 0 10px 30px rgb(0, 0, 0, 0.1);
			padding: 1rem;
			margin-top: 0.5rem;
			border-radius: 8px;
			z-index: 1000;
		}

		.nav-menu.active {
			display: block !important; /* Force show when active */
		}

		.nav-list {
			flex-direction: column;
			gap: 0.5rem;
		}

		.nav-list li {
			padding: 0.75rem 1rem;
			border-radius: 4px;
			transition: background 0.3s ease;
		}

		.nav-list li:hover {
			background: rgb(193, 105, 60, 0.1);
		}

		.nav-list a {
			display: block;
			font-size: 1.1rem;
		}

		.nav-social {
			display: none !important; /* Force hide on mobile initially */
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgb(248, 240, 227, 0.98);
			backdrop-filter: blur(10px);
			box-shadow: 0 10px 30px rgb(0, 0, 0, 0.1);
			padding: 1rem;
			margin-top: 0.5rem;
			border-radius: 8px;
			justify-content: center;
			gap: 2rem;
			z-index: 999;
		}

		.nav-social.active {
			display: flex !important; /* Force show when active */
			margin-top: 280px; /* Space for nav menu */
		}

		.nav-toggle {
			display: flex !important; /* Force show on mobile */
			z-index: 1001;
			position: relative;
			width: 40px;
			height: 40px;
			align-items: center;
			justify-content: center;
		}

		.nav-toggle.active span:nth-child(1) {
			transform: rotate(45deg) translate(5px, 5px);
		}

		.nav-toggle.active span:nth-child(2) {
			opacity: 0;
		}

		.nav-toggle.active span:nth-child(3) {
			transform: rotate(-45deg) translate(7px, -6px);
		}

		.logo img {
			width: 55px;
			height: 55px;
		}
	}
</style>

<script is:inline>
	/**
	 * Handles the mobile navigation menu functionality.
	 * This script is written in ES5-compatible JavaScript for broad browser support.
	 * It includes toggling the menu, closing it on link clicks, and closing it on outside clicks.
	 */
	(function() {
		/**
		 * Initializes the mobile menu listeners and functionality.
		 */
		function initMobileMenu() {
			// Find all necessary elements within the header.
			const header = document.querySelector('.header');
			if (!header) {
				// If the header isn't available yet, retry shortly.
				setTimeout(initMobileMenu, 100);
				return;
			}

			const navToggle = header.querySelector('.nav-toggle');
			const navMenu = header.querySelector('.nav-menu');
			const navSocial = header.querySelector('.nav-social');

			// Exit if essential elements are not found.
			if (!navToggle || !navMenu) {
				return;
			}

			// Prevent re-initializing the listeners.
			if (navToggle.hasAttribute('data-listener-added')) {
				return;
			}
			navToggle.setAttribute('data-listener-added', 'true');

			/**
			 * Toggles the visibility of the mobile navigation menu and social links.
			 * @param {Event} e - The event object.
			 */
			function toggleMenu(e) {
				if (e) {
					e.preventDefault();
					e.stopPropagation();
				}

				const isActive = navMenu.classList.contains('active');
				if (isActive) {
					// Close the menu
					navMenu.classList.remove('active');
					if (navSocial) navSocial.classList.remove('active');
					navToggle.classList.remove('active');
					navToggle.setAttribute('aria-expanded', 'false');
				} else {
					// Open the menu
					navMenu.classList.add('active');
					if (navSocial) navSocial.classList.add('active');
					navToggle.classList.add('active');
					navToggle.setAttribute('aria-expanded', 'true');
					// Focus the first link for accessibility.
					const firstLink = navMenu.querySelector('.nav-list a');
					if (firstLink) firstLink.focus();
				}
			}

			// Attach event listeners for both click and touch to the toggle button.
			navToggle.addEventListener('click', toggleMenu);
			navToggle.addEventListener('touchstart', function(e) {
				e.preventDefault();
				toggleMenu(e);
			});

			// Add event listeners to close the menu when a navigation link is clicked on mobile.
			const navLinks = header.querySelectorAll('.nav-list a');
			for (let i = 0; i < navLinks.length; i++) {
				navLinks[i].addEventListener('click', function() {
					if (window.innerWidth <= 768) {
						if (navMenu.classList.contains('active')) {
							toggleMenu();
						}
					}
				});
			}

			/**
			 * Closes the menu if a click occurs outside the header.
			 * @param {Event} e - The event object.
			 */
			function closeMenuIfOutside(e) {
				if (!header.contains(e.target)) {
					if (navMenu.classList.contains('active')) {
						toggleMenu();
					}
				}
			}

			// Attach event listeners to the document to close the menu on outside clicks.
			document.addEventListener('click', closeMenuIfOutside);
			document.addEventListener('touchstart', closeMenuIfOutside);
		}

		// Initialize the script once the DOM is fully loaded.
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initMobileMenu);
		} else {
			// The DOM is already ready.
			initMobileMenu();
		}
	})();
</script>