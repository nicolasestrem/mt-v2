        <article class="linkedin-card group">
          <!-- LinkedIn Card Header -->
          <div class="flex items-start gap-3 mb-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-brand-accent to-brand-primary flex items-center justify-center text-white font-bold">
              {post.author.charAt(0)}
            </div>
            <div class="flex-1">
              <h4 class="font-semibold text-brand-primary m-0 text-lg">{post.author}</h4>
