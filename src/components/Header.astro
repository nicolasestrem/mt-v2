---
// Header component for Mobility Trailblazers
---

<header class="header">
	<div class="container">
		<nav class="nav">
			<div class="nav-brand">
				<a href="/" class="logo">
					<img src="/images/logo.webp" alt="Mobility Trailblazers Logo" width="65" height="65">
				</a>
			</div>
			
			<div class="nav-menu">
				<ul class="nav-list">
					<li><a href="/#about">About</a></li>
					<li><a href="/#jury">Jury</a></li>
					<li><a href="/#newsletter">Newsletter</a></li>
					<li><a href="/shop" class="shop-link">Shop</a></li>
					<li><a href="/#vorschlagen">Vorschlagen</a></li>
				</ul>
			</div>
			
			<div class="nav-social">
				<a href="mailto:kontakt@mobilitytrailblazers.de?subject=Kontakt Website" class="social-link">
					<i class="fas fa-envelope"></i>
					<span>Kontakt</span>
				</a>
				<a href="https://www.linkedin.com/showcase/mobility-trailblazers/" target="_blank" rel="noopener noreferrer" class="social-link">
					<i class="fab fa-linkedin"></i>
					<span>LinkedIn</span>
				</a>
			</div>
			
			<button class="nav-toggle" aria-label="Toggle navigation">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</nav>
	</div>
</header>

<style>
	.header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		width: 100vw; /* Ensure full width on Android */
		background: rgba(248, 240, 227, 0.95);
		/* Enhanced Android backdrop filter support */
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		/* Android fallback background */
		background: #f8f0e3;
		background: rgba(248, 240, 227, 0.95);
		/* Critical z-index for Android stacking context */
		z-index: 999999;
		isolation: isolate; /* Create new stacking context */
		padding: 0.75rem 0;
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
		/* Prevent Android scroll bounce affecting header */
		-webkit-transform: translateZ(0);
		transform: translateZ(0);
		/* Force hardware acceleration on Android */
		will-change: transform;
	}

	.container {
		position: relative;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}

	.nav-brand {
		flex-shrink: 0;
	}

	.logo img {
		width: 65px;
		height: 65px;
		object-fit: contain;
	}

	.nav-menu {
		flex: 1;
		display: flex;
		justify-content: center;
	}

	.nav-list {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 3rem;
	}

	.nav-list a {
		color: #c1693c;
		font-weight: 600;
		font-size: 1.1rem;
		text-decoration: none;
		transition: color 0.3s ease;
		position: relative;
	}

	.nav-list a:hover {
		color: #004C5F;
	}

	.nav-list a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #c1693c;
		transition: width 0.3s ease;
	}

	.nav-list a:hover::after {
		width: 100%;
	}

	/* Special styling for Shop link */
	.shop-link {
		background: linear-gradient(135deg, #c1693c, #d17f52);
		color: white !important;
		padding: 0.4rem 1rem;
		border-radius: 6px;
		transition: all 0.3s ease;
		position: relative;
	}

	.shop-link:hover {
		background: linear-gradient(135deg, #d17f52, #c1693c);
		color: white !important;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(193, 105, 60, 0.3);
	}

	.shop-link::after {
		display: none; /* Remove underline effect for shop button */
	}

	.nav-social {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: #c1693c;
		font-size: 1.25rem;
		font-weight: 600;
		transition: all 0.3s ease;
		padding: 0.25rem 0.5rem;
		border-radius: 8px;
	}

	.social-link:hover {
		color: #004C5F;
		transform: translateY(-2px);
		background: rgba(193, 105, 60, 0.05);
	}

	.social-link i {
		font-size: 1.8rem;
	}

	.social-link span {
		font-size: 1.15rem;
		font-weight: 600;
	}

	.nav-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.75rem;
		/* Enhanced Android touch target - larger than standard */
		min-width: 48px;
		min-height: 48px;
		/* Prevent text selection on touch */
		-webkit-touch-callout: none;
		-webkit-user-select: none;
		user-select: none;
		/* Critical: Prevent zoom and scroll conflicts */
		touch-action: manipulation;
		/* Enhanced Android tap highlighting */
		-webkit-tap-highlight-color: rgba(193, 105, 60, 0.3);
		/* Force hardware acceleration for smooth animation */
		-webkit-transform: translateZ(0);
		transform: translateZ(0);
		will-change: transform;
		/* Ensure button stays above other elements on Android */
		position: relative;
		z-index: 1002;
		/* Android-specific outline removal */
		outline: none;
		-webkit-appearance: none;
		appearance: none;
	}

	.nav-toggle span {
		width: 25px;
		height: 3px;
		background: #c1693c;
		transition: all 0.3s ease;
		border-radius: 1px;
		/* Ensure spans are clickable */
		pointer-events: none;
	}

	/* Android-specific media query with enhanced specificity */
	@media screen and (max-width: 768px) {
		.nav {
			position: relative;
			/* Create stacking context for Android */
			isolation: isolate;
		}

		.nav-menu {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			width: 100vw; /* Ensure full width on Android */
			max-width: 100vw;
			/* Enhanced Android background fallback chain */
			background: #f8f0e3; /* Solid fallback for old Android */
			background: rgba(248, 240, 227, 0.98); /* Semi-transparent */
			backdrop-filter: blur(10px);
			-webkit-backdrop-filter: blur(10px);
			/* Critical z-index for Android menu visibility */
			z-index: 999998;
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
			padding: 1rem;
			margin-top: 0.5rem;
			border-radius: 8px;
			/* Enhanced Android touch scrolling */
			-webkit-overflow-scrolling: touch;
			overflow-y: auto;
			/* Prevent zoom and improve touch response */
			touch-action: manipulation;
			/* Force hardware acceleration */
			-webkit-transform: translateZ(0);
			transform: translateZ(0);
			will-change: opacity, transform;
			/* Android-specific fixes */
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
		}

		.nav-menu.active {
			display: block;
		}

		.nav-list {
			flex-direction: column;
			gap: 0.5rem;
		}

		.nav-list li {
			padding: 0.75rem 1rem;
			border-radius: 4px;
			transition: background 0.3s ease;
			/* Enhanced Android touch targets - larger minimum */
			min-height: 48px;
			display: flex;
			align-items: center;
			/* Ensure proper touch response */
			touch-action: manipulation;
			/* Remove Android tap delay */
			-webkit-tap-highlight-color: rgba(193, 105, 60, 0.2);
			/* Force hardware acceleration */
			-webkit-transform: translateZ(0);
			transform: translateZ(0);
		}

		.nav-list li:hover,
		.nav-list li:active {
			background: rgba(193, 105, 60, 0.1);
		}

		.nav-list a {
			display: block;
			font-size: 1.1rem;
			width: 100%;
			padding: 0.5rem 0; /* Extra padding for better touch targets */
			/* Critical Android touch settings */
			touch-action: manipulation;
			/* Enhanced tap highlight for better feedback */
			-webkit-tap-highlight-color: rgba(193, 105, 60, 0.15);
			/* Prevent text selection on touch */
			-webkit-user-select: none;
			user-select: none;
			/* Android-specific text rendering */
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
		}

		.nav-social {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			width: 100vw;
			max-width: 100vw;
			/* Enhanced Android background support */
			background: #f8f0e3; /* Solid fallback */
			background: rgba(248, 240, 227, 0.98);
			backdrop-filter: blur(10px);
			-webkit-backdrop-filter: blur(10px);
			/* Ensure visibility above menu */
			z-index: 999997;
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
			padding: 1rem;
			margin-top: 0.5rem;
			border-radius: 8px;
			justify-content: center;
			gap: 2rem;
			/* Enhanced Android touch handling */
			-webkit-overflow-scrolling: touch;
			touch-action: manipulation;
			/* Force hardware acceleration */
			-webkit-transform: translateZ(0);
			transform: translateZ(0);
			will-change: opacity, transform;
		}

		.nav-social.active {
			display: flex;
			margin-top: 280px; /* Space for nav menu */
		}

		.nav-toggle {
			display: flex;
			/* Critical z-index to stay above all menu elements */
			z-index: 1000000;
			/* Ensure button remains interactive on Android */
			position: relative;
			isolation: isolate;
		}

		.nav-toggle.active span:nth-child(1) {
			transform: rotate(45deg) translate(5px, 5px);
		}

		.nav-toggle.active span:nth-child(2) {
			opacity: 0;
		}

		.nav-toggle.active span:nth-child(3) {
			transform: rotate(-45deg) translate(7px, -6px);
		}

		.logo img {
			width: 55px;
			height: 55px;
		}
	}
	
	/* CSS-only fallback for touch devices when JavaScript fails */
	@media screen and (max-width: 768px) {
		/* Show menu on :focus-within for keyboard navigation */
		.nav:focus-within .nav-menu {
			display: block !important;
		}
		
		.nav:focus-within .nav-social {
			display: flex !important;
			margin-top: 280px;
		}
		
		/* Ensure toggle button can receive focus */
		.nav-toggle:focus {
			outline: 2px solid #c1693c;
			outline-offset: 2px;
		}
		
		/* Alternative: Pure CSS checkbox hack fallback (hidden) */
		.nav-toggle-checkbox {
			position: absolute;
			opacity: 0;
			pointer-events: none;
		}
	}
	
	/* High contrast mode support for accessibility */
	@media (prefers-contrast: high) {
		.nav-toggle span {
			background: currentColor;
		}
		
		.nav-menu, .nav-social {
			background: Canvas !important;
			color: CanvasText !important;
			border: 1px solid ButtonBorder;
		}
	}
	
	/* Reduced motion support */
	@media (prefers-reduced-motion: reduce) {
		.nav-toggle span,
		.nav-list li,
		.nav-list a::after {
			transition: none !important;
		}
	}
</style>

<script>
	// Simplified mobile menu - focusing on basic functionality first
	document.addEventListener('DOMContentLoaded', () => {
		console.log('DOM loaded, initializing mobile menu...');
		
		const header = document.querySelector('.header');
		const navToggle = document.querySelector('.nav-toggle');
		const navMenu = document.querySelector('.nav-menu');
		const navSocial = document.querySelector('.nav-social');
		
		console.log('Elements found:', { 
			navToggle: !!navToggle, 
			navMenu: !!navMenu, 
			navSocial: !!navSocial 
		});
		
		if (navToggle && navMenu && navSocial) {
			console.log('Setting up simple click handler...');
			
			// Simple toggle function
			function toggleMenu(e) {
				e.preventDefault();
				console.log('Toggle clicked:', e.type);
				
				const isActive = navToggle.classList.contains('active');
				
				if (isActive) {
					navMenu.classList.remove('active');
					navSocial.classList.remove('active');
					navToggle.classList.remove('active');
					console.log('Menu closed');
				} else {
					navMenu.classList.add('active');
					navSocial.classList.add('active');
					navToggle.classList.add('active');
					console.log('Menu opened');
				}
			}
			
			// Simple click handler that works
			navToggle.addEventListener('click', toggleMenu);
			
			// Also add touchend for better mobile support
			navToggle.addEventListener('touchend', (e) => {
				e.preventDefault();
				toggleMenu(e);
			}, { passive: false });
			
			// Function to close menu
			function closeMenu() {
				if (navMenu.classList.contains('active')) {
					navMenu.classList.remove('active');
					navSocial.classList.remove('active');
					navToggle.classList.remove('active');
					console.log('Menu closed by outside click');
				}
			}
			
			// Enhanced link click handlers
			const navLinks = header.querySelectorAll('.nav-list a');
			navLinks.forEach((link, index) => {
				const closeMobileMenu = (e) => {
					console.log(`Link ${index} clicked on mobile`);
					if (window.innerWidth <= 768) {
						closeMenu();
						// Small delay for smooth transition before navigation
						setTimeout(() => {
							if (e.target.href && !e.defaultPrevented) {
								window.location.href = e.target.href;
							}
						}, 150);
					}
				};
				
				// Multiple event types for mobile link handling
				link.addEventListener('click', closeMobileMenu, { passive: false });
				link.addEventListener('touchend', closeMobileMenu, { passive: false });
			});
			
			// Enhanced outside click detection for mobile devices
			const closeOnOutsideTouch = (e) => {
				// Only close if menu is open and touch/click is outside header
				if (navToggle.classList.contains('active') && !header.contains(e.target)) {
					console.log('Outside touch detected, closing menu');
					closeMenu();
				}
			};
			
			// Multiple event types for outside click detection
			document.addEventListener('touchstart', closeOnOutsideTouch, { passive: true });
			document.addEventListener('click', closeOnOutsideTouch, { passive: true });
			
			// Enhanced orientation and resize handling for mobile devices
			const handleViewportChange = () => {
				console.log('Viewport change detected:', window.innerWidth, 'x', window.innerHeight);
				if (window.innerWidth > 768) {
					closeMenu();
				}
			};
			
			// Multiple viewport change events
			window.addEventListener('orientationchange', () => {
				setTimeout(handleViewportChange, 200); // Longer delay for real devices
			});
			
			window.addEventListener('resize', (() => {
				let resizeTimeout;
				return () => {
					clearTimeout(resizeTimeout);
					resizeTimeout = setTimeout(handleViewportChange, 300); // Longer delay for real devices
				};
			})());
			
			// Mobile browser back button handling
			window.addEventListener('popstate', () => {
				console.log('Back button pressed');
				closeMenu();
			});
			
			// Android: Handle browser tab visibility changes
			document.addEventListener('visibilitychange', () => {
				if (document.hidden) {
					console.log('Tab hidden, closing menu');
					closeMenu();
				}
			});
			
			// Final safety check - force menu state reset on page focus
			window.addEventListener('focus', () => {
				console.log('Window focused, checking menu state');
				if (window.innerWidth > 768 && navToggle.classList.contains('active')) {
					closeMenu();
				}
			});
		}
	});
</script>
