---
/**
 * Renders a newsletter signup section.
 * This component includes a title, a description of the newsletter benefits,
 * and a form for users to subscribe. The form is handled via an AJAX request
 * to Web3Forms and redirects to a thank you page on success.
 *
 * @example
 * <Newsletter />
 */
const web3FormsKey = import.meta.env.PUBLIC_WEB3FORMS_KEY || '3bae7bb8-eb67-4656-8ba3-900a0d95306a';
---

<section class="newsletter" id="newsletter">
	<!-- Subtle curve divider at top -->
	<div class="section-divider-top">
		<svg viewBox="0 0 1200 80" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
			<defs>
				<linearGradient id="curveGradient" x1="0%" y1="0%" x2="100%" y2="0%">
					<stop offset="0%" style="stop-color:#1a365d;stop-opacity:1" />
					<stop offset="50%" style="stop-color:#253c52;stop-opacity:1" />
					<stop offset="100%" style="stop-color:#2d3748;stop-opacity:1" />
				</linearGradient>
			</defs>
			<path d="M0,80 Q600,0 1200,80 L1200,0 L0,0 Z" fill="url(#curveGradient)"></path>
		</svg>
	</div>
	<div class="container">
		<div class="newsletter-content">
			<h2 class="newsletter-title" style="color: #C1693C;">Bleiben Sie informiert – mit unserem Mobility Trailblazers Newsletter</h2>
			
			<div class="newsletter-description">
				<p>Erfahren Sie zuerst, wer nominiert wurde, wie der Auswahlprozess läuft und was Jury und Medien über den Mobilitätswandel denken. Inklusive:</p>
				<ul>
					<li>Hintergrundgeschichten & Interviews</li>
					<li>News rund um das Event & das Netzwerk</li>
					<li>Das exklusive digitale Booklet mit allen Trailblazer-Porträts, Artikeln und Insights</li>
				</ul>
				<p><strong>Direkt nach dem Award erhalten Sie das komplette Booklet bequem per E-Mail.</strong></p>
			</div>
			
			<form class="newsletter-form" id="newsletterForm">
				<!-- Form status messages -->
				<div class="form-message success-message" id="successMessage" role="alert" aria-live="polite" style="display: none;">
					✓ Vielen Dank für Ihre Anmeldung zum Newsletter!
				</div>
				<div class="form-message error-message" id="errorMessage" role="alert" aria-live="assertive" style="display: none;">
					⚠ Es gab einen Fehler beim Senden. Bitte versuchen Sie es erneut.
				</div>
				
				<!-- Web3Forms Configuration -->
				<input type="hidden" name="access_key" value={web3FormsKey}>
				<input type="hidden" name="subject" value="Neue Newsletter Anmeldung - Mobility Trailblazers">
				<input type="hidden" name="from_name" value="Mobility Trailblazers Website">
				
				<!-- Additional Web3Forms fields -->
				<!-- Redirect is commented out to use AJAX submission instead -->
				<!-- <input type="hidden" name="redirect" value="https://mobilitytrailblazers.de/#newsletter?success=true"> -->
				
				<!-- Email configuration for better deliverability -->
				<input type="hidden" name="replyto" value="email">
				
				<!-- Specify the email address where submissions should be sent -->
				<input type="hidden" name="email" value="kontakt@mobilitytrailblazers.de">
				
				<!-- Metadata for tracking -->
				<input type="hidden" name="_template" value="table">
				<input type="hidden" name="_captcha" value="false">
				
				<div class="form-group">
					<label for="firstName">Vorname *</label>
					<input type="text" id="firstName" name="firstName" required>
				</div>
				
				<div class="form-group">
					<label for="lastName">Nachname *</label>
					<input type="text" id="lastName" name="lastName" required>
				</div>
				
				<div class="form-group">
					<label for="email">E-Mail-Adresse *</label>
					<input type="email" id="email" name="email" required>
				</div>
				
				<!-- Honeypot Spam Protection -->
				<input type="checkbox" name="botcheck" class="hidden" style="display: none;">
				
				<div class="form-group">
					<label for="salutation">Anrede *</label>
					<select id="salutation" name="salutation" required>
						<option value="">Bitte wählen</option>
						<option value="Frau">Frau</option>
						<option value="Herr">Herr</option>
						<option value="Keine Angabe">Keine Angabe</option>
					</select>
				</div>
				
				<button type="submit" class="newsletter-btn">Newsletter abonnieren</button>
			</form>
		</div>
	</div>
</section>

<style>
	.newsletter {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
		color: #fff;
		position: relative;
		padding: 3rem 0;
	}

	.section-divider-top {
		position: absolute;
		top: -1px;
		left: 50%;
		transform: translateX(-50%);
		width: 100%;
		max-width: none;
		overflow: hidden;
		line-height: 0;
		z-index: 2;
	}

	.section-divider-top svg {
		position: relative;
		display: block;
		width: 100%;
		height: 40px;
	}

	@media (min-width: 768px) {
		.section-divider-top svg {
			height: 60px;
		}
	}

	.newsletter::before {
		content: '';
		position: absolute;
		inset: 0;
		background: url('/images/background.webp') center center/cover;
		opacity: 0.1;
		z-index: 1;
	}

	.newsletter-content {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
		position: relative;
		z-index: 2;
	}

	.newsletter-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 2rem;
		background: linear-gradient(45deg, #ffffff, #f0f0f0);
		background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.newsletter-description {
		margin-bottom: 3rem;
		text-align: left;
	}

	.newsletter-description p {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	.newsletter-description ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0;
	}

	.newsletter-description li {
		padding: 0.5rem 0;
		font-size: 1rem;
		position: relative;
		padding-left: 1.5rem;
	}

	.newsletter-description li::before {
		content: '✓';
		position: absolute;
		left: 0;
		color: var(--color-accent);
		font-weight: bold;
	}

	.newsletter-form {
		background: rgb(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border-radius: 20px;
		padding: 2rem;
		border: 2px solid rgb(246, 173, 85, 0.3);
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1.5rem;
		text-align: left;
		box-shadow: 
			0 20px 60px rgb(0, 0, 0, 0.2),
			0 0 80px rgb(246, 173, 85, 0.3),
			0 0 120px rgb(26, 54, 93, 0.2),
			inset 0 0 60px rgb(246, 173, 85, 0.05);
		animation: subtle-glow 3s ease-in-out infinite alternate;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group:nth-child(5),
	.form-group:nth-child(6) {
		grid-column: span 2;
	}

	.form-group:last-child {
		grid-column: span 2;
		text-align: center;
	}

	.form-group label {
		font-size: 0.9rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: rgb(255, 255, 255, 0.9);
	}

	.form-group input,
	.form-group select {
		padding: 0.8rem 1rem;
		border: 2px solid rgb(255, 255, 255, 0.3);
		border-radius: 8px;
		background: rgb(255, 255, 255, 0.1);
		color: #fff;
		font-size: 1rem;
		transition: all 0.3s ease;
		box-shadow: 
			0 0 10px rgb(26, 54, 93, 0.3),
			0 0 20px rgb(246, 173, 85, 0.2),
			0 0 30px rgb(26, 54, 93, 0.1);
	}

	.form-group input::placeholder {
		color: rgb(255, 255, 255, 0.6);
	}

	.form-group input:hover,
	.form-group select:hover {
		border-color: rgb(246, 173, 85, 0.8);
		box-shadow: 
			0 0 15px rgb(26, 54, 93, 0.5),
			0 0 30px rgb(246, 173, 85, 0.4),
			0 0 45px rgb(26, 54, 93, 0.3),
			0 0 60px rgb(246, 173, 85, 0.2);
	}

	.form-group input:focus,
	.form-group select:focus {
		outline: none;
		border-color: var(--color-accent);
		background: rgb(255, 255, 255, 0.3);
		box-shadow: 
			0 0 0 3px rgb(246, 173, 85, 0.6),
			0 0 20px rgb(26, 54, 93, 0.6),
			0 0 40px rgb(246, 173, 85, 0.5),
			0 0 60px rgb(26, 54, 93, 0.4),
			0 0 80px rgb(246, 173, 85, 0.3),
			inset 0 0 20px rgb(246, 173, 85, 0.1);
	}

	.form-group select option {
		background: var(--color-primary);
		color: #fff;
	}

	.newsletter-btn {
		background: var(--color-accent);
		color: #fff;
		border: none;
		padding: 1rem 2rem;
		border-radius: 50px;
		font-size: 1rem;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: 1rem;
		box-shadow: 
			0 4px 20px rgb(26, 54, 93, 0.5),
			0 0 40px rgb(26, 54, 93, 0.3);
	}

	.form-message {
		grid-column: span 2;
		padding: 1rem;
		border-radius: 8px;
		margin-bottom: 1rem;
		font-size: 1rem;
		text-align: center;
	}

	.success-message {
		background: rgb(212, 237, 218, 0.9);
		border: 1px solid rgb(195, 230, 203, 0.9);
		color: #155724;
	}

	.error-message {
		background: rgb(248, 215, 218, 0.9);
		border: 1px solid rgb(245, 198, 203, 0.9);
		color: #721c24;
	}

	.newsletter-btn:hover {
		background: #fff;
		color: var(--color-accent);
		transform: translateY(-2px);
		box-shadow: 
			0 10px 30px rgb(0, 0, 0, 0.3),
			0 0 50px rgb(26, 54, 93, 0.7),
			0 0 100px rgb(26, 54, 93, 0.4),
			inset 0 0 30px rgb(26, 54, 93, 0.2);
	}

	@keyframes subtle-glow {
		from {
			box-shadow: 
				0 20px 60px rgb(0, 0, 0, 0.2),
				0 0 80px rgb(246, 173, 85, 0.3),
				0 0 120px rgb(26, 54, 93, 0.2),
				inset 0 0 60px rgb(246, 173, 85, 0.05);
			border-color: rgb(246, 173, 85, 0.3);
		}

		to {
			box-shadow: 
				0 20px 60px rgb(0, 0, 0, 0.2),
				0 0 100px rgb(246, 173, 85, 0.5),
				0 0 150px rgb(26, 54, 93, 0.3),
				inset 0 0 80px rgb(246, 173, 85, 0.1);
			border-color: rgb(246, 173, 85, 0.6);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.newsletter-form {
			animation: none;
		}

		.form-group input,
		.form-group select,
		.newsletter-btn {
			transition: none;
		}
	}

	@media (max-width: 768px) {
		.newsletter-title {
			font-size: 2rem;
		}

		.newsletter-form {
			grid-template-columns: 1fr;
			padding: 1.5rem;
		}

		.form-group:nth-child(5),
		.form-group:nth-child(6) {
			grid-column: span 1;
		}

		.form-group:last-child {
			grid-column: span 1;
		}
	}
</style>

<script>
	/**
	 * Handles the submission of the newsletter form using AJAX.
	 * It sends the form data to Web3Forms, provides user feedback (loading, error),
	 * and redirects to a thank you page on successful submission.
	 */
	const newsletterForm = document.getElementById('newsletterForm');

	if (newsletterForm) {
		newsletterForm.addEventListener('submit', async function(e) {
			e.preventDefault();

			const form = e.target as HTMLFormElement;
			const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
			const successMsg = document.getElementById('successMessage') as HTMLElement;
			const errorMsg = document.getElementById('errorMessage') as HTMLElement;
			const originalText = submitButton.textContent;

			// Indicate loading state to the user.
			submitButton.textContent = 'Wird gesendet...';
			submitButton.disabled = true;

			try {
				const formData = new FormData(form);
				const object = Object.fromEntries(formData);
				const json = JSON.stringify(object);

				// Post the form data to the Web3Forms API endpoint.
				const response = await fetch('https://api.web3forms.com/submit', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
						'Accept': 'application/json'
					},
					body: json
				});

				const result = await response.json();

				if (result.success) {
					// Track the successful submission event if a tracking function is available.
					if (typeof window.trackEvent === 'function') {
						window.trackEvent('form_submit', {
							event_category: 'engagement',
							event_label: 'newsletter_form',
							form_type: 'newsletter'
						});
					}

					// Redirect to the thank you page.
					window.location.href = '/danke-newsletter';

					// Reset the form as a fallback in case the redirect fails.
					form.reset();
				} else {
					// Handle submission failure.
					throw new Error(result.message || 'Form submission failed');
				}
			} catch (error) {
				console.error('Form submission error:', error);

				// Display an error message to the user.
				if (successMsg) successMsg.style.display = 'none';
				if (errorMsg) {
					errorMsg.style.display = 'block';
					// Automatically hide the error message after 7 seconds.
					setTimeout(() => {
						if (errorMsg) errorMsg.style.display = 'none';
					}, 7000);
				}
			} finally {
				// Restore the button to its original state.
				submitButton.textContent = originalText;
				submitButton.disabled = false;
			}
		});
	}
</script>
