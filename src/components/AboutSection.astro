---
// About section component for Mobility Trailblazers
import Icons from './Icons.astro';
import { getContent } from '../lib/tina';

interface Partner {
  name: string;
  logo: string;
  url: string;
  description: string;
}

interface AboutContent {
  intro: string;
  description: string[];
  heroImage: {
    src: string;
    alt: string;
  };
  partners: Partner[];
}

// Load about content from static JSON files with fallback defaults
const content = getContent<AboutContent>('about', 'about') || {
  intro: "Wer steht hinter den «25 Mobility Trailblazers in 25»?",
  description: [
    "Der Award «25 Mobility Trailblazers in 25» ist eine Initiative des Instituts für Mobilität der Universität St. Gallen.",
    "Ziel ist es, den mutigsten und wirksamsten Persönlichkeiten des Mobilitätswandels im DACH-Raum eine Bühne zu geben – unabhängig von Branche, Organisationsform oder Bekanntheitsgrad.",
    "Medienpartner ist das Handelsblatt.",
    "Die organisatorische Umsetzung der Initiative erfolgt durch Tomczak-Gross & Partners AG."
  ],
  heroImage: {
    src: "/images/about/fernsehturm-berlin.jpg",
    alt: "Fernsehturm Berlin - Wahrzeichen der deutschen Hauptstadt, symbolisiert die Innovationskraft im Mobilitätswandel"
  },
  partners: [
    {
      name: "Institut für Mobilität der Universität St. Gallen",
      logo: "/images/about/imo-logo.webp",
      url: "https://imo.unisg.ch/de/home/",
      description: "Forschungsinstitut für die Zukunft der Mobilität"
    },
    {
      name: "Tomczak-Gross & Partners AG", 
      logo: "/images/about/tomczak-gross-logo.webp",
      url: "https://www.tomczak-gross.com/",
      description: "Strategieberatung und Organisationsumsetzung"
    },
    {
      name: "Handelsblatt",
      logo: "/images/about/handelsblatt-logo.webp", 
      url: "https://www.handelsblatt.com/",
      description: "Medienpartner"
    }
  ]
};
---

<section class="about-section" id="about-initiative">
	<div class="container">
		<!-- Main about content with image -->
		<div class="about-hero">
			<div class="about-content">
				<h4 class="about-intro">{content.intro}</h4>
				{content.description.map((paragraph) => (
					<p class="about-text">{paragraph}</p>
				))}
				
				<div class="cta-buttons">
					{content.partners.slice(0, 2).map((partner) => (
						<a href={partner.url} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
							{partner.name}
						</a>
					))}
				</div>
			</div>
			
			<div class="about-image">
				<img src={content.heroImage.src} 
				     alt={content.heroImage.alt} 
				     width="600" 
				     height="400" 
				     fetchpriority="high">
			</div>
		</div>
		
		<!-- Partner cards section -->
		<div class="partners-section">
			{content.partners.map((partner) => (
				<div class="partner-card">
					<div class="partner-logo">
						<img src={partner.logo} alt={`Logo ${partner.name} - ${partner.description}`} loading="lazy">
					</div>
					<h3 class="partner-title">{partner.name}</h3>
					<p class="partner-description">{partner.description}</p>
					<a href={partner.url} target="_blank" rel="noopener noreferrer" class="partner-link">
						Learn More <Icons name="arrow-right" class="arrow-icon" />
					</a>
				</div>
			))}
		</div>
		
		<!-- Closing statement -->
		<div class="closing-statement">
			<!-- Creative zigzag divider at top -->
			<svg class="shape-divider" viewBox="0 0 1200 60" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
				<path d="M0,30 L100,10 L200,30 L300,10 L400,30 L500,10 L600,30 L700,10 L800,30 L900,10 L1000,30 L1100,10 L1200,30 L1200,60 L0,60 Z" fill="currentColor" opacity="0.1"></path>
				<path d="M0,30 L100,10 L200,30 L300,10 L400,30 L500,10 L600,30 L700,10 L800,30 L900,10 L1000,30 L1100,10 L1200,30" stroke="currentColor" stroke-width="2" fill="none" opacity="0.3"></path>
			</svg>
			<h2 class="closing-title">Gemeinsam wollen wir zeigen:</h2>
			<p class="closing-text">
				Mobilität verändert sich – weil Menschen den Mut haben, sie zu gestalten.
			</p>
			<a href="#vorschlagen" class="btn btn-accent">
				Mobility Trailblazer vorschlagen <Icons name="arrow-right" class="btn-icon" />
			</a>
		</div>
	</div>
</section>

<style>
	.about-section {
		background: var(--color-background);
		position: relative;
		padding: 4rem 0;
		overflow: hidden;
	}
	
	.about-hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		margin-bottom: 5rem;
	}
	
	.about-content {
		padding: 2rem;
	}
	
	.about-intro {
		color: var(--color-accent);
		font-size: 1.8rem;
		font-weight: 600;
		margin-bottom: 2rem;
		line-height: 1.3;
	}
	
	.about-text {
		color: var(--color-text);
		font-size: 1.1rem;
		line-height: 1.7;
		margin-bottom: 1rem;
	}
	
	.cta-buttons {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		margin-top: 2rem;
		justify-content: flex-start;
	}
	
	.btn {
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
		display: inline-block;
		text-align: center;
		white-space: normal;
		line-height: 1.4;
		flex: 0 1 auto;
	}
	
	.btn-primary {
		background: var(--color-primary);
		color: white;
		border: 2px solid var(--color-primary);
	}
	
	.btn-primary:hover {
		background: transparent;
		color: var(--color-primary);
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(0, 60, 61, 0.2);
	}
	
	.btn-secondary {
		background: transparent;
		color: var(--color-primary);
		border: 2px solid var(--color-primary);
	}
	
	.btn-secondary:hover {
		background: var(--color-primary);
		color: white;
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(0, 60, 61, 0.2);
	}
	
	.btn-accent {
		background: var(--color-accent);
		color: white;
		border: 2px solid var(--color-accent);
		padding: 1.2rem 2.5rem;
		font-size: 1.1rem;
	}
	
	.btn-accent:hover {
		background: transparent;
		color: var(--color-accent);
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(193, 105, 60, 0.2);
	}
	
	.about-image {
		position: relative;
		overflow: hidden;
		border-radius: 20px;
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
	}
	
	.about-image img {
		width: 100%;
		height: auto;
		display: block;
		transition: transform 0.5s ease;
	}
	
	.about-image:hover img {
		transform: scale(1.05);
	}
	
	.partners-section {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-bottom: 4rem;
	}
	
	.partner-card {
		background: white;
		border-radius: 20px;
		padding: 2.5rem;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}
	
	.partner-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
	}
	
	.partner-logo {
		width: 100%;
		height: 120px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
		padding: 1rem;
	}
	
	.partner-logo img {
		max-width: 100%;
		max-height: 100%;
		object-fit: contain;
	}
	
	.partner-title {
		color: var(--color-primary);
		font-size: 1.3rem;
		font-weight: 600;
		margin-bottom: 1rem;
		line-height: 1.3;
	}
	
	.partner-description {
		color: var(--color-text);
		font-size: 1rem;
		line-height: 1.6;
		margin-bottom: 1.5rem;
		flex-grow: 1;
	}
	
	.partner-link {
		color: var(--color-accent);
		font-weight: 600;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
	}
	
	.partner-link:hover {
		gap: 1rem;
		color: var(--color-primary);
	}
	
	.partner-link :global(.arrow-icon) {
		transition: transform 0.3s ease;
		width: 1em;
		height: 1em;
		display: inline-block;
		vertical-align: middle;
	}
	
	.partner-link:hover :global(.arrow-icon) {
		transform: translateX(3px);
	}
	
	.closing-statement {
		text-align: center;
		padding: 5rem 2rem 3rem;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 240, 227, 0.6));
		border-radius: 30px;
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08);
		position: relative;
		overflow: hidden;
	}
	
	.shape-divider {
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 100%;
		max-width: none;
		height: 60px;
		color: var(--color-accent);
	}
	
	.closing-title {
		color: var(--color-primary);
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #C1693C, #004C5F);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
		z-index: 1;
	}
	
	.closing-text {
		color: var(--color-text);
		font-size: 1.3rem;
		margin-bottom: 2rem;
		font-weight: 500;
	}
	
	.btn :global(.btn-icon) {
		width: 1em;
		height: 1em;
		display: inline-block;
		vertical-align: middle;
		margin-left: 0.5rem;
		transition: transform 0.3s ease;
	}
	
	.btn:hover :global(.btn-icon) {
		transform: translateX(3px);
	}
	
	@media (max-width: 1024px) {
		.partners-section {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
	}
	
	@media (max-width: 768px) {
		.about-hero {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.about-content {
			padding: 1rem;
		}
		
		.cta-buttons {
			flex-direction: column;
			align-items: stretch;
		}
		
		.btn {
			width: 100%;
			text-align: center;
		}
		
		.partner-card {
			padding: 2rem;
		}
		
		.closing-title {
			font-size: 2rem;
		}
		
		.closing-text {
			font-size: 1.1rem;
		}
	}
</style>