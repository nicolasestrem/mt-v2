<style>
	.linkedin-feed {
		background: var(--color-background-alt);
		padding: 4rem 0;
	}

	.feed-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.feed-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--color-primary);
	}

	.feed-subtitle {
		font-size: 1.125rem;
		color: var(--color-text-light);
		margin-bottom: 2rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.feed-grid {
		display: grid;
		gap: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	.feed-item {
		background: white;
		border-radius: var(--border-radius-lg);
		padding: 1.5rem;
		box-shadow: var(--shadow);
		transition: var(--transition);
		border: 1px solid var(--color-border);
	}

	.feed-item:hover {
		box-shadow: var(--shadow-lg);
		transform: translateY(-2px);
	}

	.feed-content {
		display: flex;
		gap: 1rem;
	}

	.feed-avatar {
		flex-shrink: 0;
	}

	.feed-avatar img {
		width: 48px;
		height: 48px;
		border-radius: 50%;
		object-fit: cover;
	}

	.feed-text {
		flex: 1;
	}

	.feed-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.75rem;
	}

	.feed-author {
		font-weight: 600;
		color: var(--color-primary);
	}

	.feed-time {
		font-size: 0.875rem;
		color: var(--color-text-light);
	}

	.feed-message {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--color-text);
		margin-bottom: 1rem;
	}

	.feed-actions {
		display: flex;
		gap: 1rem;
	}

	.feed-action {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background: none;
		border: none;
		color: var(--color-text-light);
		font-size: 0.875rem;
		cursor: pointer;
		padding: 0.5rem;
		border-radius: var(--border-radius);
		transition: var(--transition);
	}

	.feed-action:hover {
		background: var(--color-background-alt);
		color: var(--color-accent);
	}

	.feed-action i {
		font-size: 1rem;
	}

	@media (max-width: 768px) {
		.feed-title {
			font-size: 2rem;
		}

		.feed-content {
			flex-direction: column;
			align-items: flex-start;
		}

		.feed-avatar {
			margin-bottom: 0.5rem;
		}

		.feed-actions {
			flex-wrap: wrap;
		}
	}
</style>