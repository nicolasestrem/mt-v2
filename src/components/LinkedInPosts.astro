            <span>{post.comments} Kommentare</span>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex gap-2">
            <button class="flex-1 py-2 text-center text-brand-accent hover:bg-brand-accent/10 rounded transition">
              Gef√§llt mir
