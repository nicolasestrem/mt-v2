      </div>
    </div>
  </main>
  <Footer />
  
  <script>
    // Track conversion event
    if (typeof window.trackEvent === 'function') {
      window.trackEvent('newsletter_subscribe', {
        event_category: 'engagement',
        event_label: 'newsletter_signup',
        value: 1
      });
    }
  </script>
