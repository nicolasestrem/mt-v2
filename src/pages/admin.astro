// Admin page for TinaCMS
export const prerender = true;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Management - Mobility Trailblazers</title>
</head>
<body>
    <h1>Content Management System</h1>
    <p>Manage website content without coding knowledge</p>
    
    <h2>Content Files Location</h2>
    <p>All editable content is stored in the content/ directory:</p>
    <ul>
        <li>content/hero/hero.json - Homepage hero section</li>
        <li>content/mission/mission.json - Mission statement</li>
        <li>content/jury/*.json - Jury member profiles</li>
        <li>content/criteria/*.json - Selection criteria</li>
        <li>content/partners/*.json - Partner organizations</li>
        <li>content/settings.json - Site settings</li>
    </ul>
    
    <h2>How to Edit on GitHub</h2>
    <ol>
        <li>Go to GitHub.com and sign in</li>
        <li>Navigate to your repository</li>
        <li>Click on the content/ folder</li>
        <li>Select the file you want to edit</li>
        <li>Click the pencil icon to edit</li>
        <li>Make your changes in the editor</li>
        <li>Scroll down and add a commit message</li>
        <li>Click "Commit changes"</li>
        <li>The website will automatically update after deployment</li>
    </ol>
    
    <p><a href="/">Back to Website</a></p>
</body>
</html>
